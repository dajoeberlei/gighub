{% from 'MopaBootstrapBundle::flash.html.twig' import session_flash %}

<!DOCTYPE html>
<html>

    <head>
        <meta charset="utf-8" />

        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>{% block title %}Gighub{% endblock title %}</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" media="screen">
    </head>

<body style="padding-top: 70px">
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <p class="navbar-text navbar-right"><img src="http://graph.facebook.com/{{ currentUser.username }}/picture" height="32px" width="32px"> <a style="font-size: 16px" href="http://www.facebook.com/" class="navbar-link" target="_blank">{{ currentUser.realName }}</a></p>
    </div>
</nav>
{% block body %}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            {% if app.session.flashbag.peekAll|length > 0 %}
                <div class="row">
                    <div class="col-sm-12">
                        {{ session_flash() }}
                    </div>
                </div>
            {% endif %}

            {% block content %}{% endblock %}
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
            $('[data-toggle="popover"]').popover();
        });
    </script>
</div>
{% endblock body %}

    <script src="http://code.jquery.com/jquery.js"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
</body>
</html>
